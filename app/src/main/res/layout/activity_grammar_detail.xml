<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:background="@color/pinkBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Структура -->
        <TextView
            android:id="@+id/textDetailStructure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/textDark"
            android:layout_marginBottom="14dp" />

        <!-- Объяснение -->
        <TextView
            android:id="@+id/textDetailExplanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/textDark"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/textDetailExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:textColor="@color/textDark" />

        <TextView
            android:id="@+id/textDetailTranslation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/textDark" />

        <!-- Кнопка упражнений -->
        <androidx.cardview.widget.CardView
            android:id="@+id/buttonExercises"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="14dp"
            card_view:cardElevation="4dp"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Упражнения"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/textDark"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
