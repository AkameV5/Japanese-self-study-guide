<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pinkBackground"
    android:fitsSystemWindows="true"
    tools:context=".main_profile.MainActivity">

    <!-- Основной контент -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pinkBackground"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/accentPink"
            android:title="Thuru Learn"
            android:titleTextColor="@color/white"
            app:titleCentered="true"
            app:navigationIcon="@drawable/ic_menu"
            android:fitsSystemWindows="true" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:id="@+id/dailyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/daily_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ежедневные рекомендации"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:id="@+id/recommendations_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Навигационное меню -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navig_menu"
        app:headerLayout="@layout/navig_header"
        android:background="@color/pinkBackground"
        android:fitsSystemWindows="true"
        app:itemTextColor="@color/textDark"
        app:itemIconTint="@color/accentPinkDark"
        app:itemRippleColor="@color/pinkBackground" />

</androidx.drawerlayout.widget.DrawerLayout>
