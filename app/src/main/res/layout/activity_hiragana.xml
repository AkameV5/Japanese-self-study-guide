<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/pinkBackground">

    <!-- Скроллируемая часть -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="8dp"
        android:paddingBottom="120dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Заголовок хираганы -->
            <TextView
                android:id="@+id/tvHiraganaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Хирагана"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/textDark"/>

            <!-- Сетка хираганы -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerHiragana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:padding="8dp"
                android:scrollbars="none"
                android:background="@color/pinkBackground"
                tools:listitem="@layout/item_hiragana"/>

            <!-- Заголовок ёон -->
            <TextView
                android:id="@+id/tvYouonTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ёон (ゃ, ゅ, ょ комбинации)"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/textDark"/>

            <!-- Сетка ёон -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerYouon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:padding="8dp"
                android:scrollbars="none"
                android:background="@color/pinkBackground"
                tools:listitem="@layout/item_hiragana"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <!-- Обычные упражнения -->
    <Button
        android:id="@+id/btnExercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Упражнения"
        android:textSize="18sp"
        android:backgroundTint="@color/accentPink"
        android:textColor="@color/white"
        android:layout_margin="16dp"
        android:padding="14dp"
        app:layout_anchorGravity="bottom"
        app:layout_anchor="@id/scrollContainer"/>

    <!-- Ежедневные упражнения -->
    <Button
        android:id="@+id/btnDaily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ежедневные упражнения"
        android:textSize="18sp"
        android:padding="14dp"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:backgroundTint="@color/accentPink"
        android:textColor="@color/white"
        app:layout_anchorGravity="bottom"
        app:layout_anchor="@id/scrollContainer"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
